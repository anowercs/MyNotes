<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.anowercs.notespadpro.activities.ProfileActivity"
    android:background="@color/profileBackground"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:background="@drawable/profile_bk"
        android:paddingBottom="30dp"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            >

            <ImageView
                android:id="@+id/IV_editProfileImage"
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:src="@drawable/demo_profile_2"
                android:scaleType="centerCrop"

                />
            <ImageView
                android:id="@+id/IV_change_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_camera"
                android:background="@drawable/circle_shape"
                android:padding="8dp"
                android:visibility="gone"

                />

            <!-- Circular ProgressBar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                style="@android:style/Widget.ProgressBar.Small"
                android:indeterminate="true"/>

        </FrameLayout>
        

        <TextView
            android:id="@+id/TV_userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@appsnippuser"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/TV_userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="developer@appsnipp.com"
            android:textSize="12dp"
            android:textStyle="bold"/>


    </LinearLayout>

   <LinearLayout
       android:id="@+id/LL_backToHome"
       android:layout_width="200dp"
       android:layout_height="55dp"
       android:layout_gravity="center"
       android:background="@drawable/circle_background"
       android:orientation="vertical"
       android:layout_marginTop="-30dp"


       >

       <TextView
           style="@style/profileStyledBackButton"
           android:gravity="center"
           android:text="Back to\nHome" />


   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            style="@style/headerText"
            android:layout_marginBottom="20dp"
            android:text="Account Info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_field"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_person" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="5dp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Name"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/EDT_fullName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Full Name"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:background="@null"
                    android:focusable="false"

                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_field"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_person" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="5dp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Mobile"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/EDT_mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+8801717053112"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:enabled="false"
                    android:background="@null"
                    android:focusable="false"

                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_field"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_person" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="5dp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Email"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/EDT_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="democse@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:background="@null"
                    android:focusable="false"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_field"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_person" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="5dp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Address"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/EDT_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Via Vincenzu maculani 23"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:background="@null"
                    android:focusable="false"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_field"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_person" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="5dp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="DOB"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/EDT_dob"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="DD-MM-YYYY"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:textColorHint="@color/black"
                    android:background="@null"
                    android:focusable="false"

                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/BTN_editProfile"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Edit Profile"

        />

</LinearLayout>
